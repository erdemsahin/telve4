<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet author="haky" id="note-1">
        <createTable tableName="TLV_NOTE">
            <column autoIncrement="true" name="ID" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="TLV_NOTEPK"/>
            </column>
            <column name="OWNER" type="VARCHAR(255)"/>
            <column name="CREATE_DATE" type="datetime"/>
            <column name="SUBJECT" type="VARCHAR(255)"/>
            <column name="BODY" type="VARCHAR(255)"/>
            <column name="PERMISSION" type="VARCHAR(255)"/>
            <column name="ATTACHMENT" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet author="haky" id="note-2">
        <addColumn tableName="TLV_NOTE">
            <column name="PRIORITY" type="varchar(255)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
